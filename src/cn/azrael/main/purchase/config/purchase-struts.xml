<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
          "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="purchase-action" namespace="/purchase" extends="json-default">
    	
    	<action name="purchaseorder_*" class="cn.azrael.main.purchase.action.PurchaseOrderAction" method="{1}">
    		<result name="default">/WEB-INF/jsp/purchase/purchase_main.jsp</result>
    		<result name="list" type="redirectAction">
    			<param name="actionName">purchaseorder_info</param>
    			<param name="pageNo">${pageNo}</param>
    		</result>
    		<result name="change" type="redirectAction">
    			<param name="actionName">purchaseorder_change</param>
    			<param name="pageNo">${pageNo}</param>
    		</result>
    		<result name="{1}">/WEB-INF/jsp/purchase/purchaseorder_{1}.jsp</result>
    	</action>
    	<action name="purchaseinfo_*" class="cn.azrael.main.purchase.action.PurchaseInfoAction" method="{1}">
    		<result name="list" type="redirectAction">
    			<param name="actionName">purchaseorder_detail</param>
    			<param name="pageNo">${pageNo}</param>
    			<param name="purchaseOrder.id">${purchaseOrder.id}</param>
    		</result>
    		<result name="{1}">/WEB-INF/jsp/purchase/purchaseinfo_{1}.jsp</result>
    	</action>
    	<action name="facilitieuse_*" class="cn.azrael.main.purchase.action.FacilitieUseAction" method="{1}">
    		<result name="list" type="redirectAction">
    			<param name="actionName">facilitieuse_info</param>
    			<param name="pageNo">${pageNo}</param>
    		</result>
    		<result name="{1}">/WEB-INF/jsp/purchase/facilitieuse_{1}.jsp</result>
    	</action>
    </package>
</struts>
